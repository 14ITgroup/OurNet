	<script type="text/javascript">
	    var winHeight = 0;
	    function findWH() {
	        //获取窗口高度 
	        if (window.innerHeight)
	            winHeight = window.innerHeight;
	        else if ((document.body) && (document.body.clientHeight))
	            winHeight = document.body.clientHeight;
	        //通过深入Document内部对body进行检测，获取窗口大小 
	        if (document.documentElement && document.documentElement.clientHeight) {
	            winHeight = document.documentElement.clientHeight;
	        };
	        document.getElementById("banner-back").style.height = winHeight - 20 + 'px';
	        // document.getElementById("banner-back").style.height = winHeight - 60 + 'px';
	    };
	    findWH();
	    window.onresize = findWH;
	</script>
	<script type="text/javascript">
	    $(function () {
	        //导航栏在页面滑动至一定位置才会出现
	        $(".index-menu").css('display', 'none');
	        $(".scroll-top").css('display', 'none');
	        // introduction of our team
	        $(".intro-culture").css('display', 'none');
	        $(".intro-idea").css('display', 'none');
	        $(".intro-team").css('display', 'none');
	        //introduction of our apartment
	        $(".apart-art").css('display', 'none');
	        $(".apart-pro").css('display', 'none');
	        $(".apart-sys").css('display', 'none');

	        $(window).scroll(function (event) {
	            height = $(window).scrollTop();
	            if (height > 500) {
	                $('.index-menu').fadeIn();
	            } else {
	                $('.index-menu').fadeOut();
	            };
	            if (height > 600) {
	                $('.scroll-top').fadeIn();
	            } else {
	                $('.scroll-top').fadeOut();
	            };
	            if (height > 750 && height < 1500) {
	                $('.intro-culture').slideDown();
	            } else {
	                $('.intro-culture').fadeOut();
	            };
	            if (height > 1000 && height < 1900) {
	                $('.intro-idea').slideDown();
	            } else {
	                $('.intro-idea').fadeOut();
	            };
	            if (height > 1400 && height < 2200) {
	                $('.intro-team').slideDown();
	            } else {
	                $('.intro-team').fadeOut();
	            };
	            if (height > 1800 && height < 2600) {
	                $('.apart-art').slideDown();
	            } else {
	                $('.apart-art').fadeOut();
	            };
	            if (height > 2200 && height < 3000) {
	                $('.apart-pro').slideDown();
	            } else {
	                $('.apart-pro').fadeOut();
	            };
	            if (height > 2500 && height < 3500) {
	                $('.apart-sys').slideDown();
	            } else {
	                $('.apart-sys').fadeOut();
	            };

	        });
	        // 点击join us now ,页面平滑滚动至相应位置
	        $(".nav-join").click(function (event) {
	            $.scrollTo('#enroll-container', 800);
	        });
	        $(".scroll-top").click(function (event) {
	            $.scrollTo('#banner-back', 900);
	        });
	        //点击banner中向下箭头，页面向下滚动
	        $(".scroll-bottom").click(function (event) {
	            $.scrollTo('#index-des', 800);
	        });
	        // 点击导航栏中的简介，页面滑动至相应位置
	        $(".index-menu li:eq(1) a").click(function (event) {
	            $.scrollTo('#index-des', 800);
	        });
	    });
	</script>
